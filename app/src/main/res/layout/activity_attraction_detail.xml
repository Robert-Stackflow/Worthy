<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/checked_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/attraction_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/attraction_detail_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/attraction_detail_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="返回"
                android:scaleType="centerInside"
                android:src="@drawable/ic_light_arrow_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/attraction_detail_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="分享地点"
                android:scaleType="centerInside"
                android:src="@drawable/ic_light_share"
                app:layout_constraintEnd_toStartOf="@id/attraction_detail_jump_to_map"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/attraction_detail_jump_to_map"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="跳转到地图"
                android:scaleType="centerInside"
                android:src="@drawable/ic_light_map"
                app:layout_constraintEnd_toStartOf="@id/attraction_detail_more"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/attraction_detail_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="更多"
                android:scaleType="centerInside"
                android:src="@drawable/ic_light_ellipsis"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attraction_detail_titlebar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/attraction_detail_title_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/attraction_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="九寨沟"
                        android:textColor="@color/color_accent"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/attraction_detail_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="300dp"
                        android:singleLine="true"
                        android:text="四川省九寨沟市黄果山瀑布"
                        android:textColor="@color/text_color_gray" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:text="关注" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/attraction_detail_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="赏樱之人络绎不绝，且看珞珈山下热舞" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/attraction_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/attraction_detail_banner"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_card_top_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/attraction_detail_content_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/attraction_detail_content_tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabBackground="@android:color/transparent"
                app:tabIndicator="@drawable/shape_tab_indicator"
                app:tabIndicatorColor="@color/checked_color"
                app:tabIndicatorFullWidth="false"
                app:tabMode="fixed"
                app:tabRippleColor="@android:color/transparent"
                app:tabTextAppearance="@style/TabTextAppearance" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/attraction_detail_content_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"
            app:layout_constraintTop_toBottomOf="@id/attraction_detail_content_bar" />

        <com.cloudchewie.client.ui.NoScrollViewPager
            android:id="@+id/attraction_detail_content_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/attraction_detail_content_divider" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>