<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/detail_more_share_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_more_share_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_wechat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                app:entry_item_icon="@drawable/ic_colorful_wechat"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="微信"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_qq"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_colorful_qq"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="QQ"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_weibo"
                app:layout_constraintStart_toEndOf="@id/detail_more_wechat"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_weibo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_colorful_weibo"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="微博"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_pengyouquan"
                app:layout_constraintStart_toEndOf="@id/detail_more_qq"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_pengyouquan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_colorful_pengyouquan"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="朋友圈"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_qqzone"
                app:layout_constraintStart_toEndOf="@id/detail_more_weibo"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_qqzone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_colorful_qqzone"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="QQ空间"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_photo"
                app:layout_constraintStart_toEndOf="@id/detail_more_pengyouquan"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:entry_item_icon="@drawable/ic_colorful_photo"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="图片分享"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_more_qqzone"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/detail_more_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/detail_more_share_scrollview" />

    <HorizontalScrollView
        android:id="@+id/detail_more_operation_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_more_divider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_more_operation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                app:entry_item_icon="@drawable/ic_light_note"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="编辑"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                app:entry_item_icon="@drawable/ic_light_delete"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="删除"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_report"
                app:layout_constraintStart_toEndOf="@id/detail_more_edit"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_report"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_light_prompt"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="举报"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_uninterested"
                app:layout_constraintStart_toEndOf="@id/detail_more_delete"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_uninterested"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_light_uninterested"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="不感兴趣"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_viewavatar"
                app:layout_constraintStart_toEndOf="@id/detail_more_report"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_viewavatar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_light_account"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="查看头像"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/detail_more_addtoblacklist"
                app:layout_constraintStart_toEndOf="@id/detail_more_uninterested"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.client.ui.EntryItem
                android:id="@+id/detail_more_addtoblacklist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:entry_item_icon="@drawable/ic_light_blacklist"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="加入黑名单"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_more_viewavatar"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/detail_more_divider_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/detail_more_operation_scrollview" />

    <TextView
        android:id="@+id/detail_more_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="取消"
        android:textAlignment="center"
        android:textColor="@color/text_color_red"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/detail_more_divider_2" />
</androidx.constraintlayout.widget.ConstraintLayout>