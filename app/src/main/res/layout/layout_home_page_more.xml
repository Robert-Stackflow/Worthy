<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/home_page_more_operation_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_page_more_operation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.cloudchewie.ui.EntryItem
                android:id="@+id/home_page_more_idcard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_light_picture"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="个人名片"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_page_more_changebackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.ui.EntryItem
                android:id="@+id/home_page_more_changebackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                app:entry_item_icon="@drawable/ic_light_color"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="更换背景"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_page_more_changeavatar"
                app:layout_constraintStart_toEndOf="@id/home_page_more_idcard"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.ui.EntryItem
                android:id="@+id/home_page_more_changeavatar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_light_account"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="更换头像"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_page_more_edit"
                app:layout_constraintStart_toEndOf="@id/home_page_more_changebackground"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.ui.EntryItem
                android:id="@+id/home_page_more_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                app:entry_item_icon="@drawable/ic_light_note"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="编辑信息"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_page_more_settings"
                app:layout_constraintStart_toEndOf="@id/home_page_more_changeavatar"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.ui.EntryItem
                android:id="@+id/home_page_more_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                app:entry_item_icon="@drawable/ic_light_settings"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="空间设置"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_page_more_report"
                app:layout_constraintStart_toEndOf="@id/home_page_more_edit"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.ui.EntryItem
                android:id="@+id/home_page_more_report"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                app:entry_item_icon="@drawable/ic_light_warning"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="举报"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_page_more_addtoblacklist"
                app:layout_constraintStart_toEndOf="@id/home_page_more_settings"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cloudchewie.ui.EntryItem
                android:id="@+id/home_page_more_addtoblacklist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:entry_item_icon="@drawable/ic_light_block"
                app:entry_item_icon_background="@drawable/shape_card_round"
                app:entry_item_icon_background_enable="true"
                app:entry_item_icon_color="@color/text_color_red"
                app:entry_item_icon_size="50dp"
                app:entry_item_spacing="10dp"
                app:entry_item_text="加入黑名单"
                app:entry_item_text_color="@color/text_color_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_page_more_report"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/home_page_more_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_divider"
        app:layout_constraintTop_toBottomOf="@id/home_page_more_operation_scrollview" />

    <TextView
        android:id="@+id/home_page_more_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/cancel"
        android:textAlignment="center"
        android:textColor="@color/text_color_red"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/home_page_more_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>