<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/icon_text_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/icon_text_item_icon"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:contentDescription="@string/cd_icon_text_item_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_light_map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/color_prominent" />

    <TextView
        android:id="@+id/icon_text_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="3dp"
        android:textColor="@color/color_prominent"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_text_item_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"
        tools:text="武汉" />
</androidx.constraintlayout.widget.ConstraintLayout>