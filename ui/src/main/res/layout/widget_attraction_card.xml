<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_card_round"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/attraction_card_title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:id="@+id/attraction_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_accent"
                    android:textSize="20sp"
                    tools:text="九寨沟" />

                <TextView
                    android:id="@+id/attraction_card_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="300dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gray"
                    tools:text="四川省九寨沟市黄果山瀑布" />

            </LinearLayout>

            <ImageView
                android:id="@+id/attraction_card_jump_to_map"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/cd_jump_to_map"
                android:src="@drawable/ic_light_map" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <LinearLayout
            android:id="@+id/attraction_card_statistics_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.cloudchewie.ui.IconTextItem
                android:id="@+id/attraction_card_follow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_card_bottom_left_radius"
                android:clickable="true"
                android:focusable="true"
                app:icon_text_item_icon="@drawable/ic_light_star"
                app:icon_text_item_icon_color="@color/color_accent"
                app:icon_text_item_text_color="@color/color_accent" />

            <com.cloudchewie.ui.IconTextItem
                android:id="@+id/attraction_card_visitor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_card"
                android:clickable="true"
                android:focusable="true"
                app:icon_text_item_icon="@drawable/ic_light_eye"
                app:icon_text_item_icon_color="@color/color_accent"
                app:icon_text_item_text_color="@color/color_accent" />

            <com.cloudchewie.ui.IconTextItem
                android:id="@+id/attraction_card_post"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_card_bottom_right_radius"
                android:clickable="true"
                android:focusable="true"
                app:icon_text_item_icon="@drawable/ic_light_note"
                app:icon_text_item_icon_color="@color/color_accent"
                app:icon_text_item_text_color="@color/color_accent" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>