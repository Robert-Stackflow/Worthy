<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card_round"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/attraction_card_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="40sp"
            tools:text="九寨沟" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="跳转到地图"
            android:src="@drawable/ic_light_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/attraction_card_title_layout">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="地点"
            android:src="@drawable/ic_light_map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            tools:text="四川省九寨沟市黄果山瀑布" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>